---
import { Image } from "astro:assets";
const { drink } = Astro.props;

if (!drink) {
  return;
}
---

<article
  class="odd:rotate-1 even:-rotate-1 hover:rotate-0 transition hover:scale-105 duration-500 bg-white"
  data-drink={JSON.stringify(drink.data)}
>
  <a href={`/drinks/${drink.id}`} class="h-full flex flex-col">
    <Image
      src={drink.data.image}
      alt={drink.data.name}
      class:list={"w-full aspect-[6/4] object-cover rounded-t-2xl"}
      transition:name={`drink-image-${drink.id}`}
    />

    <div
      class="px-4 pt-8 flex flex-col grow border-x-2 border-b-2 border-gray-100 rounded-b-2xl overflow-hidden"
    >
      <h2 class="h5 tracking-wide" transition:name={`drink-title-${drink.id}`}>
        {drink.data.name}
      </h2>
      <p
        class="mt-2 mb-8 prose"
        transition:name={`drink-description-${drink.id}`}
      >
        {drink.data.description}
      </p>
      <span
        class="text-center px-4 py-2 -mx-4 text-white text-2xl font-bold bg-gradient-to-r from-[#44A08D]/80 to-[#093637]/80 mt-auto block"
      >
        Try Me
      </span>
    </div>
  </a>
</article>
